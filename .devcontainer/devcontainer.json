{
    "name": "Python Dev Container",
    "context": "..",
    "dockerFile": "../Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-python.black-formatter"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/zsh"
            }
        }
    },
    "forwardPorts": [
        80
    ],
    "remoteUser": "root"
}